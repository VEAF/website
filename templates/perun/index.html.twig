{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block pageContent %}
    <div class="container container-main pt-3 pb-3 mb-3">
        <div class="row mb-3 ml-1 mr-1">
            <h1>Liste des serveurs</h1>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Théâtre
                    </th>
                    <th>
                        Mission
                    </th>
                    <th>
                        Joueurs
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for instance in instances %}
                    <tr>
                        <td>
                            <a href="{{ path("perun_instance", {"instance": instance.id}) }}">{{ instance.id }}</a>
                        </td>
                        <td>
                            <a href="{{ path("perun_instance", {"instance": instance.id}) }}">{{ instance.theater }}</a>
                        </td>
                        <td>
                            <a href="{{ path("perun_instance", {"instance": instance.id}) }}">{{ instance.mission }}</a>
                        </td>
                        <td>
                            {{ instance.playersCount }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock pageContent %}
