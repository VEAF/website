{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} - Inscription{% endblock %}

{% block pageContent %}
    <div class="container pt-3 pb-3 mb-3">
        <div class="row mb-3 ml-1 mr-1 justify-content-center">
            <div class="col-6">
                <div class="card border-secondary mb-3">
                    <div class="card-header">Formulaire d'inscription</div>
                    {% if registration_disabled %}
                        <div class="alert alert-dismissible alert-warning ml-3 mr-3 mt-3">
                            <strong>Les inscriptions sont temporairements désactivées</strong><br/>
                            <br/>
                            En attendant, retrouvez nous sur <a href="/discord"><i class="fab fa-discord"></i> discord</a><br/>
                        </div>
                    {% else %}
                    <div class="alert alert-dismissible alert-info ml-3 mr-3 mt-3">
                        <strong>Attention !</strong>, si vous avez déjà un compte, utilisez <a
                                href="{{ path('app_login') }}">le formulaire de connexion ici</a>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_rest(form) }}
                        {{ form_errors(form) }}
                        <button class="btn btn-lg btn-primary" type="submit">
                            <i class="fa fa-pen"></i> S'inscrire
                        </button>
                        {{ form_end(form) }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}