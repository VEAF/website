{% extends 'admin/layout.html.twig' %}
{% set libKilikTable=true %}
{% set section="admin" %}
{% set subSection="calendar-event" %}

{% block pageContent %}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="bs-component">
                <div class="card mb-3">
                    <h3 class="card-header">Modifier l'événement</h3>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_rest(form) }}
                        {{ form_errors(form) }}
                        {% if event.image is not null %}
                        <img class="img-fluid mb-3"
                             src="{{ image(image_header_path(event.image)).zoomCrop(1400,280).jpeg }}"/>
                        {% endif %}
                        <div class="row">
                            <div class="col-sm-6">
                                {% if event is not null %}
                                    <a href="{{ path('admin_calendar_event_view', {'event': event.id}) }}"
                                       class="btn btn-lg btn-primary form-control">
                                        <i class="fa fa-arrow-circle-left"></i> Annuler
                                    </a>
                                {% else %}
                                    <a href="{{ path('admin_calendar_event_list') }}"
                                       class="btn btn-lg btn-primary form-control">
                                        <i class="fa fa-arrow-circle-left"></i> Annuler
                                    </a>
                                {% endif %}
                            </div>
                            <div class="col-sm-6">
                                <button class="btn btn-lg btn-danger form-control " type="submit">
                                    <i class="fa fa-save"></i> Enregistrer
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock pageContent %}
