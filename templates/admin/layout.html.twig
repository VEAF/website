{# admin layout #}
{% extends "base.html.twig" %}
{% set libSelect2=true %}

{% block head %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet"
          type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.1.3/js/sb-admin-2.min.js"
            integrity="sha512-COtY6/Rv4GyQdDShOyay/0YI4ePJ7QeKwtJIOCQ3RNE32WOPI4IYxq6Iz5JWcQpnylt/20KBvqEROZTEj/Hopw=="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.1.3/css/sb-admin-2.css"
          integrity="sha512-1HclAOkQSKIyDqJS8azD2GusAZTbtDrChZU0o0UL2+3lDw2KeMLCEYOQzsO2joppy8L+CVKI3SkXBeZb3vUwYA=="
          crossorigin="anonymous"/>
{% endblock head %}

{% block bodyAttributes %} id="page-top"{% endblock bodyAttributes %}
{% block body %}
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path("admin_index") }}">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">{{ website | upper }}</div>
                <div>{{ app_version }}</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item{% if section == "admin" and subSection == "dashboard" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_index") }}">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Administration
            </div>

            <li class="nav-item{% if section == "admin" and subSection == "user" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_user_list") }}">
                    <i class="fas fa-users"></i>
                    <span>Utilisateurs</span>
                </a>
            </li>
            <li class="nav-item{% if section == "admin" and subSection == "page" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_page_list") }}">
                    <i class="fas fa-file-alt"></i>
                    <span>Pages</span>
                </a>
            </li>
            <li class="nav-item{% if section == "admin" and subSection == "file" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_file_list") }}">
                    <i class="fas fa-file-alt"></i>
                    <span>Fichiers</span>
                </a>
            </li>
            <li class="nav-item{% if section == "admin" and subSection == "calendar-event" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_calendar_event_list") }}">
                    <i class="fas fa-file-alt"></i>
                    <span>Evénements</span>
                </a>
            </li>
            <li class="nav-item{% if section == "admin" and subSection == "url" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_url_list") }}">
                    <i class="fas fa-file-alt"></i>
                    <span>Urls</span>
                </a>
            </li>
            <li class="nav-item{% if section == "admin" and subSection == "menu-item" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_menu_item_list") }}">
                    <i class="fas fa-file-alt"></i>
                    <span>Eléments menu</span>
                </a>
            </li>
            <hr class="sidebar-divider">
            <div class="sidebar-heading">
                DCS
            </div>
            <li class="nav-item{% if section == "dcs" and subSection == "player" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_dcs_player_list") }}">
                    <i class="fas fa-users"></i>
                    <span>Joueurs (SLMOD)</span>
                </a>
            </li>
            <li class="nav-item{% if section == "dcs" and subSection == "perun-player" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_dcs_perun_player_list") }}">
                    <i class="fas fa-users"></i>
                    <span>Joueurs (Perun)</span>
                </a>
            </li>
            <li class="nav-item{% if section == "dcs" and subSection == "module" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_module_list") }}">
                    <i class="fas fa-cubes"></i>
                    <span>Modules</span>
                </a>
            </li>
            <li class="nav-item{% if section == "dcs" and subSection == "module-system" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_module_system_list") }}">
                    <i class="fas fa-cubes"></i>
                    <span>Systèmes des modules</span>
                </a>
            </li>
            <li class="nav-item{% if section == "dcs" and subSection == "module-role" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_module_role_list") }}">
                    <i class="fas fa-cubes"></i>
                    <span>Rôles des modules</span>
                </a>
            </li>
            <li class="nav-item{% if section == "dcs" and subSection == "variant" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_dcs_variant_list") }}">
                    <i class="fas fa-cube"></i>
                    <span>Variants</span>
                </a>
            </li>
            <li class="nav-item{% if section == "dcs" and subSection == "server" %} active{% endif %}">
                <a class="nav-link" href="{{ path("admin_dcs_server_list") }}">
                    <i class="fas fa-server"></i>
                    <span>Serveurs</span>
                </a>
            </li>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small"><i
                                            class="fa fa-user"></i> {{ app.user.nickname }}</span>
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="{{ path('profile') }}">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Mon profil
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path("home") }}">
                                    <i class="fas fa-home fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Retour au site
                                </a>
                                <div class="dropdown-divider">{{ path("app_logout") }}</div>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Déconnexion
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->


                <!-- Begin Page Content -->
                <div class="container-fluid">
                    {% block pageContent %}

                        <i>you should add a pageContent block in your template</i>

                    {% endblock pageContent %}
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    {% block javascript %}{{ parent() }}{% endblock javascript %}
{% endblock body %}
