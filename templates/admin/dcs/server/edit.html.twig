{% extends 'admin/layout.html.twig' %}
{% set section="dcs" %}
{% set subSection="server" %}

{% block pageContent %}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="bs-component">
                <div class="card mb-3">
                    {% if server.id is not null %}
                        <h3 class="card-header">Modifier le serveur DCS</h3>
                    {% else %}
                        <h3 class="card-header">Ajouter un serveur DCS</h3>
                    {% endif %}
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_rest(form) }}
                        {{ form_errors(form) }}
                        <div class="row">
                            <div class="col-sm-6">
                                {% if server.id is not null %}
                                    <a href="{{ path('admin_dcs_server_view', {'server': server.id}) }}"
                                       class="btn btn-lg btn-primary form-control">
                                        <i class="fa fa-arrow-circle-left"></i> Annuler
                                    </a>
                                {% else %}
                                    <a href="{{ path('admin_dcs_server_list') }}"
                                       class="btn btn-lg btn-primary form-control">
                                        <i class="fa fa-arrow-circle-left"></i> Annuler
                                    </a>
                                {% endif %}
                            </div>
                            <div class="col-sm-6">
                                <button class="btn btn-lg btn-danger form-control " type="submit">
                                    <i class="fa fa-save"></i> Enregistrer
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock pageContent %}

{% block javascript %}
<script>
    $(document).ready(function () {
    $('.select2').select2();
});
</script>
{% endblock javascript %}
