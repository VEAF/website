{% block header %}
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
        <div class="container">
            <a href="/" class="navbar-brand"><img src="{{ cdn_veaf }}/img/site-logo.png" class="logo-navbar"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link"><span class="fa fa-newspaper"></span> Les nouvelles</a>
                    </li>
                    <li class="nav-item">
                        <a href="https://community.veaf.org/" class="nav-link"><span class="fa fa-envelope"></span>
                            Forum</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="association"><span
                                    class="fa fa-hotel"></span> Association
                            <span class="caret"></span></a>
                        <div class="dropdown-menu" aria-labelledby="association">
                            <a class="dropdown-item" href="/association/presentation-association">Présentation</a>
                            <!--                        <div class="dropdown-divider"></div>-->
                            <a class="dropdown-item" href="{{ path('office') }}">Le bureau</a>
                            <a class="dropdown-item" href="/association/status">Les statuts</a>
                            <a class="dropdown-item" href="/association/reglement-interieur">Règlement intérieur</a>
                            <a class="dropdown-item" href="https://community.veaf.org/topic/21/nous-rejoindre">Rejoindre
                                l'association</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="webstv"><span
                                    class="fa fa-tv"></span> Webs TV
                            <span class="caret"></span></a>
                        <div class="dropdown-menu" aria-labelledby="webstv">
                            <a class="dropdown-item" href="http://www.youtube.com/user/AssociationVEAF/">
                                <span class="fa fa-youtube"></span> Chaîne Youtube VEAF
                            </a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"
                           id="webstv"><span class="fa fa-server"></span> Serveurs<span
                                    class="caret"></span></a>
                        <div class="dropdown-menu" aria-labelledby="webstv">
                            <a class="dropdown-item" href="{{ path("perun_index") }}">
                                Serveurs DCS
                            </a>
                        </div>
                    </li>
                    {% if app.user %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"
                               id="webstv"><span class="fa fa-user"></span> {{ app.user.nickname }}<span
                                        class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="webstv">
                                {% if is_granted("ROLE_ADMIN") %}
                                    <a class="dropdown-item" href="{{ path("admin_index") }}">
                                        Administration
                                    </a>
                                {% endif %}
                                <a class="dropdown-item" href="{{ path("app_logout") }}">
                                    Déconnexion
                                </a>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a href="{{ path("app_login") }}" class="nav-link"><span class="fa fa-sign-in-alt"></span>
                                Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
{% endblock header %}

